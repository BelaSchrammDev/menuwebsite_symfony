{% extends 'base.html.twig' %}

{% block body %}

	{% for message in app.flashes('success') %}
		<div class="mt-2 container alert alert-success">
			<h3>{{ message }}</h3>
		</div>
	{% endfor %}

	{% for message in app.flashes('error') %}
		<div class="mt-2 container alert alert-danger">
			<h3>{{ message }}</h3>
		</div>
	{% endfor %}

    <br>

{% endblock %}
